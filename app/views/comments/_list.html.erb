<div class="card comment-list">
  <div class="card-body">
      <% list.each do |comment| %>
      <div class="row mb-4">
          <div class="col-md-2">
              <%# <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/> %>
              <p class="text-secondary text-center"><%= comment.created_at %></p>
          </div>
          <div class="col-md-10">
              <div class="d-flex">
                <div class="flex-grow-1">
                  <p><a href="https://maniruzzaman-akash.blogspot.com/p/contact.html"><strong><%= comment.user.name %></strong></a></p>
                  <p><%= comment.content %></p>
                </div>
                <div>
                  <a class="btn btn-outline-primary ml-2 btn-reply" data-id="<%= comment.id %>">  <i class="fa fa-reply"></i> Reply</a>
                  <a class="btn text-white btn-danger"> <i class="fa fa-heart"></i> Like</a>
                </div>
              </div>
              <div class="mt-2">
                <%= render 'comments/list', list: comment.replies unless comment.replies.empty? %>
              </div>
          </div>
      </div>
      <% end %>
  </div>
</div>

<h1>List</h1>

<ul>
  <% @articles.each do |article| %>
  <li>
    <a href="<%= article_path(article) %>"><%= article.title %></a>
    ---- <%= article.text %>
    <%= link_to 'View', article_path(article) %>
    <%= link_to 'Edit', edit_article_path(article) %>
    <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'ok?' } %>
  </li>
  <% end %>
</ul>
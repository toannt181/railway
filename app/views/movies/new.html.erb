<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_with model: @movie, class: "project" do |form| %>
        <h2 class="project__title">Create new movie</h2>
        <div class="project__content">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group form-customize form-customize--has-value">
                <%= form.label :title, "Movie title", class: "label-title" %>
                <%= form.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group form-customize form-customize--has-value">
                <%= form.label :release_date, "Release date", class: "label-title" %>
                <%= form.text_field :release_date, class: "form-control input-datepicker", "data-provide": "datepicker" %>
              </div>
              <div class="form-group form-customize form-customize--has-value">
                <%= form.label :actors, "Actors", class: "label-title" %>
                <div class="form-append-button d-flex justify-content-between align-items-center">
                  <div class="form-group form-customize">
                    <input class="form-control" type="text" placeholder="例）東京、銀座、神田駅">
                  </div>
                  <label class="checkbox d-flex align-items-center">
                    <input class="input-checkbox" type="checkbox" checked="checked"><span class="checkmark"></span><span class="title">未定</span>
                  </label>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group form-customize form-customize--textarea form-customize--has-value">
                <%= form.label :description, "Description", class: "label-title" %>
                <%= form.text_area :description, class: "form-control form-control--textarea" %>
              </div>
            </div>
            </div>
        </div>
        <div class="button-group d-flex justify-content-center">
          <a href="<%= movies_path %>" class="button button--bg-white button--medium mr-3" data-toggle="modal" data-target="#modalCancel"><i class="fa fa-arrow-left mr-1"></i>Back
          </a>
          <button type="submit" class="button button--blue button--medium ml-1"><i class="fa fa-check mr-1"></i>Save
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "datepicker", "data-turbolinks-track" => "reload" %>
<%= stylesheet_link_tag "datepicker", media: "all", "data-turbolinks-track" => "reload" %>
<%= javascript_include_tag params[:controller] %> 